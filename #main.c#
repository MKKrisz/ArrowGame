#include <stdio.h>
#include <stdbool.h>
#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>

#include "debugmalloc.h"
#include "src/menu/menu.h"
#include "src/game.h"
#include "src/graphics/graphics.h"


#define WIDTH 1920
#define HEIGHT 1080
#define SCALE 0.2f

#define PI 3.1415926


// Sets up the game configuration through an interactive menu, then starts the game.
int main(void) {
    init_Random();
    InitText();
    Graphics g = CreateGraphics("fos", WIDTH, HEIGHT, SCALE);
    IMG_Init(IMG_INIT_PNG);

    SDL_SetRenderDrawBlendMode(g.Renderer, SDL_BLENDMODE_BLEND);
    Game game;
    game.PlayerCount = 0;

    Menu* main = LoadMenu("Menus/libMainMenu.so", &game, &g);
    UpdateLoop(main, &g);
    if(main->GetGame != NULL) game = (*main->GetGame)();

    /*float damage = RandomFR(1, 20);

    Game game = (Game){
        .PlayerCount = 2,
        .BaseAccel = 300.0f,
        .BaseAngular = PI*4.0f,
        .BaseHealth = 100.0f,
        .BaseFriction = 0.75f,
        .BaseWeapon = CreateWeapon(
            (ShotType)HEATSEEK,
            damage,
            500.0f,
            0.05f,
            0.4f,
            20
            )
        };*/

    
    if(game.PlayerCount > 0)GameLoop(&game, &g);

    DEALLOCMENU(main);

    DestroyGraphics(&g);
    IMG_Quit();
}
